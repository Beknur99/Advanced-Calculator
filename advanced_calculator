"""
Advanced Console Calculator
Author: Beknur99
Version: 1.1
A simple console-based calculator supporting basic operations + power and square root.
"""

import math

def add(x, y):
    """Return the sum of two numbers."""
    return x + y

def subtract(x, y):
    """Return the difference between two numbers."""
    return x - y

def multiply(x, y):
    """Return the product of two numbers."""
    return x * y

def divide(x, y):
    """
    Return the quotient of two numbers.
    Returns an error message for division by zero.
    """
    if y == 0:
        return "Error: Division by zero is undefined"
    return x / y

def power(x, y):
    """Return x raised to the power of y."""
    return x ** y

def square_root(x):
    """Return the square root of x."""
    if x < 0:
        return "Error: Square root of negative number is undefined"
    return math.sqrt(x)

def show_menu():
    """Display the calculator operation options."""
    print("\n" + "="*35)
    print("CALCULATOR OPERATIONS")
    print("="*35)
    print("1. Addition")
    print("2. Subtraction")
    print("3. Multiplication")
    print("4. Division")
    print("5. Power (x^y)")
    print("6. Square Root (√x)")
    print("7. Exit Program")
    print("="*35)

def main():
    """Main program function for the calculator application."""
    print("="*50)
    print("Advanced Console Calculator")
    print("="*50)
    
    while True:
        show_menu()
        choice = input("Please select an operation (1-7): ").strip()
        
        # Exit condition
        if choice == '7':
            print("Thank you for using the Advanced Console Calculator.")
            break
        
        # Square root only needs one operand
        if choice == '6':
            try:
                num = float(input("Enter the number: "))
                result = square_root(num)
                print(f"Result: √{num} = {result}")
            except ValueError:
                print("Invalid input: Please enter numerical values only.")
            continue

        # Validate and process numerical input
        try:
            num1 = float(input("Enter the first operand: "))
            num2 = float(input("Enter the second operand: "))
        except ValueError:
            print("Invalid input: Please enter numerical values only.")
            continue
        
        # Execute selected operation
        if choice == '1':
            result = add(num1, num2)
            print(f"Result: {num1} + {num2} = {result}")
        elif choice == '2':
            result = subtract(num1, num2)
            print(f"Result: {num1} - {num2} = {result}")
        elif choice == '3':
            result = multiply(num1, num2)
            print(f"Result: {num1} × {num2} = {result}")
        elif choice == '4':
            result = divide(num1, num2)
            print(f"Result: {num1} ÷ {num2} = {result}")
        elif choice == '5':
            result = power(num1, num2)
            print(f"Result: {num1}^{num2} = {result}")
        else:
            print("Invalid selection: Please choose an option between 1-7.")

# Standard Python idiom for executable scripts
if __name__ == "__main__":
    main()
